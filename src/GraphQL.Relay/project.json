{
    "webroot": "wwwroot",
    "version": "1.0.0-*",

    "dependencies": {
        "Microsoft.AspNet.Hosting": "1.0.0-*",
        "Microsoft.AspNet.StaticFiles": "1.0.0-*",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-*",
        "GraphQL.SchemaBuilder": "1.0.0-*"
    },


    "commands": {
        "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
        "buildschema": "GraphQL.SchemaBuilder --schemaTypeName GraphQL.Relay.StarWarsRelaySchema --schemaAssemblyName GraphQL.Relay"
    },

    "frameworks": {
        "dnx451": {
            "dependencies": {
                "GraphQL": "1.0.0-*",
                "GraphQL.Tests": "1.0.0-*"
            }
        }
    },

    "exclude": [
        "wwwroot",
        "node_modules"
    ],
    "publishExclude": [
        "**.user",
        "**.vspscc"
    ]
}
